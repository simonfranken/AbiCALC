<Window x:Class="AbiCALC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbiCALC"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800"
        WindowStyle="SingleBorderWindow" ResizeMode="CanResize"
        MinHeight="500"
        MinWidth="800"
        MaxHeight="600"
        MaxWidth="1000"
        >
    <Window.Resources>

        <!--Style: Navigationpanel-Icon-->
        <Style x:Key="navicon_style" TargetType="Image">

            <Setter Property="Margin" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Style.Triggers>
                <EventTrigger RoutedEvent="Image.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ThicknessAnimation
                                    Storyboard.TargetProperty="Margin"
                                    To="9"
                                    Duration="0:0:0.040"/>

                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Image.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ThicknessAnimation
                                    Storyboard.TargetProperty="Margin"
                                    To="15"
                                    Duration="0:0:0.040"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>

        </Style>

        <!--Style: Windows-->
        <Style x:Key="window_style" TargetType="Grid">
            <Setter Property="DockPanel.Dock" Value="Right"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Visibility" Value="Hidden"/>
        </Style>
        <Style x:Key="homewindow_style" TargetType="Grid">
            <Setter Property="DockPanel.Dock" Value="Right"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Visibility" Value="Visible"/>
        </Style>

        <!--Style: Text-->
        <Style x:Key="headline1_style" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Margin" Value="20,0,0,10"/>
            <Setter Property="FontFamily" Value="fonts/#League Spartan"/>
        </Style>
        <Style x:Key="headline2_style" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="Margin" Value="20, 13, 0, 0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="fonts/#League Spartan"/>
        </Style>
        <Style x:Key="normalText_style" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="FontFamily" Value="fonts/#League Spartan"/>
        </Style>

        <!--Style: Border-->
        <Style x:Key="border_style" TargetType="Border">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="CornerRadius" Value="15"/>
        </Style>
        <Style x:Key="headlineborder_style" TargetType="Border">
            <Setter Property="Background" Value="#1a1a1a"/>
        </Style>
        <Style x:Key="navborder_style" TargetType="Border">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="CornerRadius" Value="0, 15, 15, 0"/>
        </Style>

        <!--Style: Grid-->
        <Style x:Key="grid_style" TargetType="Grid">
            <Setter Property="Margin" Value="15"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Border.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ThicknessAnimation
                                Storyboard.TargetProperty="Margin"
                                To="12"
                                Duration="0:0:0.200"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Border.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ThicknessAnimation
                                Storyboard.TargetProperty="Margin"
                                To="15"
                                Duration="0:0:0.200"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <DockPanel Background="#333333" >

        <!--Naviagtionpanel-->
        <Grid x:Name="nav_pnl"  DockPanel.Dock="Left" Width="60" Background="Transparent" HorizontalAlignment="Left">

            <!--Rowdefinitions-->
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Animationtrigger-->
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="nav_pnl"
                                Storyboard.TargetProperty="Width"
                                To="125"
                                Duration="0:0:0.100"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Grid.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="nav_pnl"
                                Storyboard.TargetProperty="Width"
                                To="60"
                                Duration="0:0:0.100"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>

            <!--Box-->
            <Border Style="{StaticResource navborder_style}" Grid.RowSpan="9"/>

            <!--Icons-->
            <Image x:Name="home_icon" Style="{ StaticResource navicon_style}" Source="/resources/home_logo.png" Grid.Row="4"/>

            <!--Effect-->

        </Grid>

        <!--Windows-->
        <Grid x:Name="home_window" Style="{ StaticResource homewindow_style}">

            <!--Rowdefinitions-->
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="200*"/>
                <RowDefinition Height="300*"/>
            </Grid.RowDefinitions>

            <!--Columndefinition-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350*"/>
                <ColumnDefinition Width="579*"/>
            </Grid.ColumnDefinitions>

            <!--Headline-->
            <Border Style="{StaticResource headlineborder_style}" Margin="15,0,15,10" CornerRadius="0, 0, 10, 10" Grid.ColumnSpan="2">
                <TextBlock Style="{ StaticResource headline1_style}" Text="HOME"/>
            </Border>

            <!--Notenprognose-->
            <Grid Grid.Row="1" Grid.Column="0" Style="{StaticResource grid_style}" Margin="15" MaxHeight="200" MaxWidth="350">

                <!--Rowdefinitions-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--Border-->
                <Border Style="{StaticResource border_style}" Grid.RowSpan="2"/>

                <!--Headline-->
                <TextBlock Text="Aktuelle Notenprognose" Style="{StaticResource headline2_style}" VerticalAlignment="Top" />
                <TextBlock Text="1.0"
                           Style="{StaticResource normalText_style}"
                           Grid.Row="1" FontSize="35"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,40,0"/>

            </Grid>
        </Grid>
    </DockPanel>
</Window>
