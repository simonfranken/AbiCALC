<Page x:Class="AbiCALC.Pages.page_add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AbiCALC.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="page_add"
      xmlns:control="clr-namespace:AbiCALC.customUI.ListSelection">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource style_default_border}" Grid.ColumnSpan="3" >
            <TextBlock Style="{StaticResource headline1_style}" Text="Note hinzufügen"/>
        </Border>

        <control:listSelection Grid.Row="1" x:Name="subjectListXaml" Margin="2.5"/>

    </Grid>
</Page>
