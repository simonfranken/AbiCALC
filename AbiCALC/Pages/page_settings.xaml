<Page x:Class="AbiCALC.Pages.page_settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AbiCALC.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SETTINGS"
      Style="{StaticResource pageMain}">

    <Grid>

        <!--Rowdefinitions-->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Columndefinition-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource style_default_border}" Grid.RowSpan="1" Grid.Row="0">

            <Grid>

                <!--Rowdefinitions-->
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Grid.RowSpan="1" Grid.Row="0" MouseLeftButtonUp="color_change">

                    <TextBlock Text="Farben ändern" 
                               Style="{StaticResource style_default_text}"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="25">
                    </TextBlock>

                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource style_default_border}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ff7f00"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                </Border>
                
                <Border Grid.RowSpan="1" Grid.Row="1" MouseLeftButtonUp="name_change">

                    <TextBlock Text="Name ändern" 
                               Style="{StaticResource style_default_text}"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="25">
                    </TextBlock>

                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource style_default_border}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ff7f00"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                </Border>
                
                
            </Grid>
        </Border>
        <Border x:Name="nameField" Style="{StaticResource  style_default_border}" Grid.Row="1" Visibility="Hidden">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Border Style="{StaticResource style_default_border}" Grid.RowSpan="1" Grid.Row="0">
                    <TextBox x:Name="nameInput" 
                             Style="{StaticResource style_default_textbox}"
                             FontSize="20"
                             TextAlignment="Center"
                             VerticalContentAlignment="Center">
                    </TextBox>
                </Border>

                <Border Grid.RowSpan="1" Grid.Row="1" MouseLeftButtonUp="name_change_ok">
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource style_default_border}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ff7f00"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="OK"
                               Style="{StaticResource style_default_text}"
                               TextAlignment="Center"
                               Padding="10">
                    </TextBlock>
                </Border>
            </Grid>


        </Border>
        
        
    </Grid>
</Page>
